@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center mt-5">
    <h1 class="fw-bold mb-3" style="color:#0d6efd;">Contract Monthly Claim System</h1>
    <p class="text-muted mb-5">
        Welcome to the CMCS Dashboard. Submit, Track, and Verify your monthly claims effortlessly.
    </p>

    <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a asp-controller="Lecturer" asp-action="Submit" class="btn btn-primary px-4 py-2 shadow-sm">
            <i class="bi bi-upload me-2"></i> Submit Claim
        </a>
        <a asp-controller="Lecturer" asp-action="Track" class="btn btn-outline-primary px-4 py-2 shadow-sm">
            <i class="bi bi-list-check me-2"></i> Track Claims
        </a>
        <a asp-controller="Coordinator" asp-action="Pending" class="btn btn-outline-primary px-4 py-2 shadow-sm">
            <i class="bi bi-check2-circle me-2"></i> Verify Claims
        </a>
    </div>
</div>

