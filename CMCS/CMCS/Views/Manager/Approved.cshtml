@model IEnumerable<CMCS.Models.Claim>

<div class="container mt-4">
    <div class="card p-4 shadow-sm border-0 bg-white">
        <h2 class="text-center fw-bold mb-4 text-primary">
            <i class="bi bi-person-badge"></i> Manager — Coordinator Approved
        </h2>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center shadow-sm">
                There are currently no coordinator-approved claims awaiting payment.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>Month</th>
                            <th>Hours</th>
                            <th>Lecturer Name</th>
                            <th>Lecturer ID</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Notes</th>
                            <th>Evidence</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.Month.ToString("yyyy-MM")</td>
                                <td>@claim.HoursWorked.ToString("N2")</td>
                                <td>@claim.LecturerName</td>
                                <td>@claim.LecturerId</td>
                                <td>@claim.HourlyRate.ToString("N2")</td>
                                <td>@((claim.HoursWorked * claim.HourlyRate).ToString("N2"))</td>
                                <td>@(string.IsNullOrWhiteSpace(claim.Notes) ? "—" : claim.Notes)</td>

                                <td>
                                    @if (claim.Documents?.Any() == true)
                                    {
                                        foreach (var doc in claim.Documents)
                                        {
                                            <a asp-controller="Files"
                                               asp-action="Get"
                                               asp-route-id="@doc.Id"
                                               target="_blank"
                                               class="text-decoration-none text-primary fw-semibold">
                                                Open
                                            </a>
                                            <br />
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Documents</span>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex flex-column align-items-center gap-2">
                                        <form asp-action="ApproveAndPay" asp-route-id="@claim.Id" method="post" class="d-inline">
                                            <button class="btn btn-sm btn-outline-primary px-3">
                                                <i class="bi bi-cash-coin"></i> Approve & Pay
                                            </button>
                                        </form>

                                        <form asp-action="Reject" asp-route-id="@claim.Id" method="post" class="d-inline">
                                            <button class="btn btn-sm btn-outline-danger px-3">
                                                <i class="bi bi-x-circle"></i> Reject
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
